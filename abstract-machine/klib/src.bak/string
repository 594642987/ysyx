#include <klib.h>
#include <klib-macros.h>
#include <stdint.h>

#if !defined(__ISA_NATIVE__) || defined(__NATIVE_USE_KLIB__)

size_t strlen(const char *s) {
  // assert(s != NULL);
  unsigned long i = 0;
  while(s[i] != '\0'){
    i++;
  }
  return i;
}

char *strcpy(char *dst, const char *src) {
  // assert(dst != NULL);
  // assert(src != NULL);
  char *dst_t = dst;
  while((*src) != '\0'){
    *dst_t++ = *src++;
  }
  return dst;
}

char *strncpy(char *dst, const char *src, size_t n) {
  // assert(dst != NULL);
  // assert(src != NULL);
  char *dst_t = dst;
  for(; n; n--){
    *dst_t++ = *src++;
  }
  return dst;
}

char *strcat(char *dst, const char *src) {
  char *dst_t = dst;
  while(*dst_t){
    dst_t++;
  }
  while( (*dst_t++ = *src++));
  // *dst_t = '\0';
  return dst;
}

int strcmp(const char *s1, const char *s2) {
  while(*s1 != '\0' && *s2 != '\0' && (*s1 == *s2)){
    s1++;
    s2++;
  }
  int t = *s1 - *s2;
  return t;
}
size_t

int strncmp(const char *s1, const char *s2, size_t n) {
  char *s1_t = (char *) s1;
  char *s2_t = (char *) s2;
  for(int i=0; i<n; i++){
    if(*s1_t != *s2_t){
      return *s1_t - *s2_t;
    }
    s1_t++;
    s2_t++;
  }
  return 0;
}

void *memset(void *s, int c, size_t n) {
  // assert(s != NULL);
  char *str = (char *)s;
  for(int i=0; i<n; i++){
    *(str++) = c;
  }
  return s;
}
/* The memory areas may overlap: copying takes place as though the bytes in src are first
       copied into a temporary array that does not overlap src or dest, and the bytes are then copied from the temporary array to dest*/
// 从前往后会存在重叠情况，只要从后往前复制就不会出现了
void *memmove(void *dst, const void *src, size_t n) {
  char *dst_t = (char *) dst;
  char *src_t = (char *) src;
  if(dst <= src){
    for(;n;n--){
      *dst_t++ = *src_t++;
    }
  }else{
    dst_t = dst_t + n - 1;
    src_t = src_t + n - 1;
    for(;n;n--){
      *dst_t-- = *src_t--;
    }
  }
  return dst;
}
// memcpy本身不允许重叠
void  *memcpy(void *dst, const void *src, size_t n){
  char *out_t = (char *) out;
  char *in_t = (char *) in;
  for(;n;n--){
    *out_t++ = *in_t++;
  }
  // memmove(dst,src,n);
  return dst;
}

int memcmp(const void *s1, const void *s2, size_t n) {
  char *s1_t = (char *) s1;
  char *s2_t = (char *) s2;
  for(int i=0; i<n; i++){
    if(*s1_t != *s2_t){
      return *s1_t - *s2_t;
    }
    s1_t++;
    s2_t++;
  }
  return 0;
}

#endif
